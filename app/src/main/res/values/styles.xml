<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemBackground">@color/colorPrimaryDark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LogoStyle">
        <item name="android:layout_width">@dimen/space_120dp</item>
        <item name="android:layout_height">@dimen/space_120dp</item>
        <item name="android:layout_marginEnd">@dimen/space_8dp</item>
        <item name="android:layout_marginStart">@dimen/space_8dp</item>
        <item name="android:layout_marginTop">@dimen/space_16dp</item>

    </style>

</resources>
